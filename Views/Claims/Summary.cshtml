@model List<ClaimSystem.Web.ViewModels.ClaimSummaryViewModel>

@{
    ViewData["Title"] = "Claim Summary";
}

<h2 class="mb-4">Monthly Claim Summary</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Contractor</th>
            <th>Contract</th>
            <th>Rate</th>
            <th>Hours</th>
            <th>Total</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClaimId</td>
                <td>@item.ContractorName</td>
                <td>@item.ContractName</td>
                <td>@item.Rate</td>
                <td>@item.Hours</td>
                <td>@item.Total</td>
            </tr>
        }
    </tbody>
</table>
